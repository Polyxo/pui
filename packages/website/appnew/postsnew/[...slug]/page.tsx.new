export async function getStaticPaths() {
  const posts = await getAllPosts(['slug']);

  return {
    paths: posts.map((post) => {
      const slug = post.slug.split('/').map((e) => slugify(e, { lower: true }));
      return {
        params: {
          slug,
        },
      };
    }),
    fallback: false,
  };
}
