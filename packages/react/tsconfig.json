{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "types": ["node", "mdx"],
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "typeRoots": ["./node_modules/@types", "./typings"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.test.tsx", "src/**/*.test.ts"]
}
